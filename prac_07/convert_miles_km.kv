BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            multiline: False
            font_size: 50
            on_text: app.handle_conversion(input_miles.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 150
            Button:
                text: 'Up'
                font_size: 25
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                text: 'Down'
                font_size: 25
                on_press: app.handle_increment(input_miles.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        font_size: 25
#        on_press: app.handle_conversion(input_miles.text)
    Label:
        text: app.output_kms
        color: (1, 1, 0, 1)
        font_size: 50
